{
  "name": "commit-suggester",
  "version": "1.0.0",
  "description": "AI-powered git commit message suggester using Gemini",
  "type": "module",
  "bin": {
    "commit-suggester": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun build ./src/cli.ts --outfile=./dist/cli.js --target=node && chmod +x ./dist/cli.js",
    "dev": "bun run src/cli.ts"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "gemini"
  ],
  "author": "Rishin Poolat",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.1.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.0.0",
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.0.0",
    "bun-types": "latest",
    "typescript": "^5.0.0"
  }
}