{
  "name": "ai-commit-suggester",
  "version": "1.0.0",
  "description": "AI-powered git commit message suggester",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "commit": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/cli.js",
    "start": "ts-node src/cli.ts",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "dist/**/*"
  ],
  "keywords": [
    "git",
    "commit",
    "ai",
    "gemini",
    "commit-message",
    "git-commit"
  ],
  "author": "Rishin Poolat",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/ai-commit-suggester.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/ai-commit-suggester/issues"
  },
  "homepage": "https://github.com/yourusername/ai-commit-suggester#readme",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "dotenv": "^16.0.0",
    "inquirer": "^8.2.6"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.6",
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}