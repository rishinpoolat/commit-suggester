{
  "name": "@rishinpoolat/commit-suggester",
  "version": "1.0.0",
  "description": "AI-powered git commit message suggester with multiple AI providers",
  "type": "module",
  "bin": {
    "commit-suggester": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x ./dist/cli.js",
    "dev": "bun run src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc -p tsconfig.test.json --noEmit",
    "typecheck:src": "tsc --noEmit"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "groq", 
    "openai",
    "anthropic",
    "gemini",
    "conventional-commits",
    "cli",
    "automation"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rishinpoolat/commit-suggester.git"
  },
  "bugs": {
    "url": "https://github.com/rishinpoolat/commit-suggester/issues"
  },
  "homepage": "https://github.com/rishinpoolat/commit-suggester#readme",
  "author": "Rishin Poolat",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.10.0",
    "chalk": "^5.3.0",
    "inquirer": "^12.6.3"
  },
  "devDependencies": {
    "@jest/types": "^30.0.0",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^29.5.11",
    "@types/node": "^24.0.1",
    "bun-types": "latest",
    "jest": "^30.0.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  }
}